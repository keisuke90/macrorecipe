<div class="text-center">
  <h1>ログイン</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    
    <%= form_with(url: login_path, scope: :session) do |f| %>
    
      <div class="mb-3">
        <%= f.email_field :email, class: 'form-control', :placeholder => "メールアドレス" %>
      </div>
      
      <div class="mb-3">
        <%= f.password_field :password, class: 'form-control', :placeholder => "パスワード" %>
      </div>
      
      <%= f.submit 'ログイン', class: 'btn btn-primary w-25 mx-auto d-block' %>
    <% end %>
    
  </div>
</div>