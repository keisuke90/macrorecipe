<% if recipes.any? %>
    <div class="row row-cols-1 row-cols-md-3 g-4 mb-3">
      <% recipes.each do |recipe| %>
      <div class="col">
        <div class="card h-100 border-dark text-center">
          <a href="/recipes/<%= recipe.id %>" class="card-body text-dark text-decoration-none">
            <h5 class="card-title"><%= recipe.title %></h5>
            <div class="card-img-top">
              <% if recipe.image.url %>
                <%= image_tag recipe.image.url, class: 'recipe-image', alt: "レシピ写真"  %>
              <% else %>
                <%= image_tag 'no_image_square.jpeg', class: 'recipe-image', alt: "レシピ写真" %>
              <% end %>
            </div>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">たんぱく質</th>
                  <th scope="col">脂質</th>
                  <th scope="col">炭水化物</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= "#{recipe.protein} g" %></td>
                  <td><%= "#{recipe.fat} g" %></td>
                  <td><%= "#{recipe.carbo} g" %></td>
                </tr>
              </tbody>
            </table>
          </a>
          <div class="card-footer">
            <small class="text-muted">by&nbsp;<%= recipe.user.name %>&nbsp;公開日&nbsp;:&nbsp;<%= l recipe.created_at %>&nbsp;更新日&nbsp;:&nbsp;<%= l recipe.updated_at %></small>
          </div>
        </div>
      </div>
      
      <% end %>
    </div>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>