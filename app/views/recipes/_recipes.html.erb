<% if recipes.any? %>
    <div class="row row-cols-1 row-cols-md-3 g-4">
      <% recipes.each do |recipe| %>
      <div class="col">
        <div class="card h-100 border-dark">
          <a href="/recipes/<%= recipe.id %>" class="card-body text-dark text-decoration-none">
            <h5 class="card-title"><%= recipe.title %></h5>
            <div class="card-img-top"><%= image_tag recipe.image.url if recipe.image? %></div>
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">たんぱく質</th>
                  <th scope="col">脂質</th>
                  <th scope="col">炭水化物</th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <td><%= "#{recipe.foods.sum(:protein)} g" %></td>
                  <td><%= "#{recipe.foods.sum(:fat)} g" %></td>
                  <td><%= "#{recipe.foods.sum(:carbo)} g" %></td>
                </tr>
              </tbody>
            </table>
          </a>
          <div class="card-footer">
            <small class="text-muted">by&nbsp;<%= recipe.user.name %>&nbsp;created_at&nbsp;:&nbsp;<%= l recipe.created_at %></small>
          </div>
        </div>
      </div>
      
      <% end %>
    </div>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>